<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSignup"
    android:orientation="vertical"
    android:background="@color/lightbrown">

    <TextView
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE MATERIAL"
        android:textSize="35sp"
        android:id="@+id/updateTV"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Spinner
        android:id="@+id/spin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        />
    <Button
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/generateValues"
        android:text="Generate Values"
        />
</LinearLayout>

    <TextView
        style="@style/textView"
        android:id="@+id/materialname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Material name"
        android:textSize="22sp" />
    <EditText
        style="@style/textView"
        android:id="@+id/materialdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Material description"
        android:textSize="22sp" />
    <EditText
        style="@style/textView"
        android:id="@+id/currentquantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Current quantity"
        android:textSize="22sp" />
    <EditText
        style="@style/textView"
        android:id="@+id/suppliername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Supplier name"
        android:textSize="22sp" />
    <EditText
        style="@style/textView"
        android:id="@+id/supplieraddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Supplier address"
        android:textSize="22sp" />

    <EditText
        style="@style/textView"
        android:id="@+id/suppliercontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Supplier contact"
        android:textSize="22sp" />
    <EditText
        style="@style/textView"
        android:id="@+id/supplieremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Supplier email    "
        android:textSize="22sp" />
    <Button
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Update"
        android:id="@+id/updateButton" />

    <TextView
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text=""
        android:textSize="22sp"
        android:id="@+id/tv"/>

</LinearLayout>